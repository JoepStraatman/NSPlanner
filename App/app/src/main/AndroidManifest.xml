<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.joepstraatman.nsplanner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" android:screenOrientation="portrait" />
        <activity android:name=".ReisActivity" android:screenOrientation="portrait"/>
        <activity android:name=".TijdActivity" android:screenOrientation="portrait"/>
        <activity android:name=".RouteActivity" android:screenOrientation="portrait"/>
        <activity android:name=".FavorietenActivity" android:screenOrientation="portrait"/>
        <activity android:name=".RoutePlanActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>